{
	"apiVersion": 3,
	"name": "vk-blocks/post-category-badge",
	"category": "vk-blocks-cat",
	"title": "Category Badge",
	"description": "Displays a single category or custom taxonomy associated with the post. It allows for the specification of taxonomy and design.",
	"attributes": {
		"hasLink": {
			"type": "boolean",
			"default": true
		},
		"taxonomy": {
			"type": "string"
		},
		"textAlign": {
			"type": "string"
		},
		"categoryId": {
			"type": "number"
		},
		"categoryName": {
			"type": "string"
		},
		"maxDisplayCount": {
			"type": "number",
			"default": 0
		},
		"gap": {
			"type": "object",
			"default": {
				"top": "0.5em",
				"right": "0.5em",
				"bottom": "0.5em",
				"left": "0.5em"
			},
			"description": "複数バッジ時の間隔（BoxControl用）"
		}
	},
	"supports": {
		"className": true,
		"anchor": false,
		"html": false,
		"spacing": {
			"margin": true,
			"padding": true
		},
		"__experimentalBorder": {
			"color": true,
			"radius": true,
			"style": true,
			"width": true,
			"__experimentalDefaultControls": {
				"color": true,
				"radius": true,
				"style": true,
				"width": true
			}
		},
		"typography": {
			"fontSize": true,
			"lineHeight": true,
			"__experimentalFontFamily": true,
			"__experimentalFontWeight": true,
			"__experimentalFontStyle": true,
			"__experimentalTextTransform": true,
			"__experimentalTextDecoration": true,
			"__experimentalLetterSpacing": true,
			"__experimentalDefaultControls": {
				"fontSize": true,
				"fontAppearance": true,
				"textTransform": true
			}
		},
		"style": "vk_categoryBadge"
	},
	"textdomain": "vk-blocks-pro",
	"usesContext": ["postId", "postType"]
}
